def caesar_original():
    #get the sentence to encrypt
    phrase=input("phrase Ã  chiffrer")
    i=0
    phrase_encrypted=[]
    while i < len(phrase):
        phrase_encrypted.append(chr(ord(phrase[i])+1))
        i+=1
    print(phrase_encrypted)
    
